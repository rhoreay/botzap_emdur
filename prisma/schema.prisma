generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model demandas {
  id           Int       @id @default(autoincrement())
  usuarioId    Int       @map("usuario_id")
  tipo         String    @db.VarChar(100)
  descricao    String?   @db.Text
  status       String?   @default("aberta") @db.VarChar(50)
  dataCriacao  DateTime?  @default(now()) @db.Timestamp(0) @map("data_criacao")
  usuario     usuarios   @relation(fields: [usuarioId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "demandas_ibfk_1")

  @@index([usuarioId], map: "usuario_id")
}

model estadosConversa {
  id        Int        @id @default(autoincrement())
  nome      String     @db.VarChar(100)
  descricao String?    @db.Text
  usuarios  usuarios[]

  @@map("estados_conversa")
}

model usuarios {
  id                 Int               @id @default(autoincrement())
  nomeCompleto       String            @db.VarChar(255) @map("nome_completo")
  cpf                String            @unique(map: "cpf") @db.Char(11)
  telefone           String            @db.VarChar(20)
  dataNascimento     DateTime?         @db.Date @map("data_nascimento")
  idWhatsappwebjs    String            @unique(map: "id_whatsappwebjs") @db.VarChar(255) @map("id_whatsappjs")
  estadoConversaId   Int?              @map("estado_conversa_id")
  demandas           demandas[]
  estadosConversa    estadosConversa? @relation(fields: [estadoConversaId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "usuarios_ibfk_1")

  @@index([estadoConversaId], map: "estado_conversa_id")
}
